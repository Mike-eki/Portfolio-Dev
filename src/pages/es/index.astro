---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getDict } from '../../i18n/i18n';

const lang = 'es';
const t = getDict(lang);
---

<BaseLayout lang={lang} title={t.common.siteTitle}>
  <section id="hero" class="min-h-screen flex flex-col justify-center px-6">
    <p class="text-sm uppercase tracking-[0.2em] text-sky-400">{t.hero.eyebrow}</p>
    <h1 class="mt-4 text-4xl sm:text-5xl font-semibold">{t.hero.title}</h1>
    <p class="mt-4 max-w-xl text-slate-300">{t.hero.subtitle}</p>
    <div class="mt-8">
      <a
        id="hero-cta"
        href="#contact"
        class="inline-flex items-center rounded-md bg-sky-500 px-5 py-2 text-sm font-medium text-slate-950 hover:bg-sky-400 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
      >
        {t.hero.ctaContact}
      </a>
    </div>
  </section>
</BaseLayout>
