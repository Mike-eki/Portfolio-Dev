---
interface ExperienceItem {
  id: string;
  role: string;
  company: string;
  period: string;
  summary: string;
  highlights: string[];
}

interface Props {
  heading: string;
  intro: string;
  items: ExperienceItem[];
}

const { heading, intro, items } = Astro.props as Props;
---

<section id="experience" class="px-6 py-16 space-y-6">
  <header class="space-y-2">
    <h2 class="text-2xl font-semibold">{heading}</h2>
    <p class="max-w-2xl text-sm text-slate-300">{intro}</p>
  </header>

  <div class="space-y-4">
    {items.map((item) => (
      <article
        id={item.id}
        class="rounded-lg border border-slate-800 bg-slate-900/40 p-5 text-sm text-slate-200"
      >
        <header class="flex flex-wrap items-baseline justify-between gap-2">
          <div>
            <h3 class="font-semibold">{item.role}</h3>
            <p class="text-slate-300">{item.company}</p>
          </div>
          <p class="text-xs text-slate-400">{item.period}</p>
        </header>
        <p class="mt-3 text-slate-300">{item.summary}</p>
        {item.highlights.length > 0 && (
          <ul class="mt-3 list-disc space-y-1 pl-5 text-slate-300">
            {item.highlights.map((h) => (
              <li>{h}</li>
            ))}
          </ul>
        )}
      </article>
    ))}
  </div>
</section>
